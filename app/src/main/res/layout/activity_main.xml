<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.tipcalculator.app.MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/label_num_of_people"
        android:id="@id/tvNumPeopleLabel"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/label_total_amount"
        android:id="@id/tvtotalAmount"
        android:layout_alignTop="@id/tvNumPeopleLabel"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="77dp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@id/etNumPeopleToSplit"
        android:gravity="center"
        android:layout_below="@id/tvNumPeopleLabel"
        android:layout_alignParentStart="true"
        android:layout_alignEnd="@id/tvNumPeopleLabel" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/etTotalAmount"
        android:layout_below="@id/tvtotalAmount"
        android:layout_alignStart="@id/tvtotalAmount"
        android:layout_alignBottom="@id/etNumPeopleToSplit"
        android:layout_alignParentEnd="true" />

    <RadioGroup
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:orientation="horizontal"
        android:layout_below="@id/etNumPeopleToSplit"
        android:id="@+id/radioGroup">

        <RadioButton
            android:layout_width="0dp"
            android:layout_height="85dp"
            android:text="@string/label_fifteen"
            android:id="@id/rbFifteen"
            android:singleLine="true"
            android:layout_weight="0.33"
            android:checked="false" />

        <RadioButton
            android:layout_width="0dp"
            android:layout_height="85dp"
            android:id="@id/rbTwentyfive"
            android:text="@string/label_twentyfive"
            android:layout_weight="0.33"
            android:checked="false"
             />

        <RadioButton
            android:layout_width="0dp"
            android:layout_height="85dp"
            android:text="@string/label_other"
            android:id="@id/rbOther"
            android:layout_weight="0.44" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:id="@+id/etOtherTip"
            android:layout_weight="0.37"
             />

    </RadioGroup>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tip Amount"
        android:id="@id/tvTipAmount"
        android:gravity="center"
        android:layout_below="@+id/radioGroup"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/etTotalAmountToPay"
        android:layout_alignBottom="@id/tvTipAmount"
        android:gravity="center"
        android:layout_alignEnd="@+id/radioGroup"
        android:layout_alignStart="@+id/etTotalAmount" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Bill Amount"
        android:id="@id/tvBillAmount"
        android:layout_below="@+id/etTipAmount"
        android:layout_alignParentStart="true"
        android:layout_marginTop="46dp"
        android:layout_alignEnd="@id/tvTipAmount" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/etTipAmount"
        android:gravity="center"
        android:layout_alignBottom="@id/tvTipAmount"
        android:layout_alignStart="@+id/etTotalAmountToPay"
        android:layout_alignEnd="@+id/etTotalAmountToPay" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Total Per Person"
        android:id="@id/totalPerPerson"
        android:layout_marginTop="54dp"
        android:layout_below="@id/tvBillAmount" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/etBillAmount"
        android:layout_alignBottom="@id/tvBillAmount"
        android:gravity="center"
        android:layout_alignStart="@+id/etTipAmount"
        android:layout_alignEnd="@+id/etTipAmount" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@id/etTotalPerPerson"
        android:layout_alignBottom="@id/totalPerPerson"
        android:gravity="center"
        android:layout_alignStart="@+id/etBillAmount"
        android:layout_alignEnd="@+id/etBillAmount" />


</RelativeLayout>
